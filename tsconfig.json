{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "rootDir": "src",
        "paths": {
            "@shared": ["shared"]
        },
        "types": ["node"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*", "env/**/*"],
    "exclude": ["src/test/**"]
}
